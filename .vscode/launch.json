  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Simple Classifier",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/train/",
      "program": "train_model.py",
      "args": ["-c", "experiments/config/test_simple_classifier.yaml"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Train HER2 Classifier (EfficientNetMCDropout-GRID)",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/train/",
      "program": "train_model.py",
      "args": [
        "-c", "experiments/config/wsi_generators/efficientnet_b0_her2_grid.yaml",
        "--disable_wandb"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Train Binary Classifier (SimpleClassifierMCDropout)",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/train/",
      "program": "train_model.py",
      "args": ["-c", "experiments/config/simple_binary_classifier.yaml"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Train Binary Classifier (EfficientNetMCDropout)",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/train/",
      "program": "train_model.py",
      "args": ["-c", "experiments/config/efficientnet_binary_classifier.yaml"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Prepare Dataset",
      "type": "python",
      "request": "launch",
      "program": "prepare_dataset.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/train",
      "args": [
        "-i",
        "E:/datasets/medical/warwick/train",
        "-g",
        "-m",
        "-r",
        "-o",
        "${workspaceFolder}/train/datasets",
        "-s",
        "0.15",
        "-S",
        "0.15",
        "--seed",
        "42"
      ]
    }
  ]
}
